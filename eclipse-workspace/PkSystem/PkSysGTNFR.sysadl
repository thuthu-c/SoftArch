Model SysADLModel ; package SysADL.types { value type Int { } value type Boolean { } value type String { } value type Void { } value type Real { } } Requirement Funcionamento24hNFR ( 1 ) { text = "O sistema deve operar continuamente, sem interrupção, 24 horas por dia, 7 dias por semana, garantindo disponibilidade ininterrupta." } Requirement ToleranciaAFalhasNFR ( 2 ) { text = "O sistema deve continuar operando em caso de falhas parciais de componentes (ex.: cancelas ou sensores).\nIncluir redundância em componentes principais, como servidores e banco de dados, para assegurar a operação contínua.\nImplementar um backup de energia (ex.: no-break) para manter o sistema operacional durante quedas de energia.\n" } Requirement AtualizacaoDeHardESoftNFR ( 3 ) { text = "Permitir substituição de hardware e atualização de software sem interrupção das operações do estacionamento.\nRealizar atualizações de forma transparente para o usuário, com mínima interferência na operação normal.\n" } Requirement SegurancaDeDadosNFR ( 4 ) { text = "Os dados de entrada e saída de veículos e informações de pagamento devem ser protegidos por criptografia.\nAssegurar que todos os dados sensíveis estejam em conformidade com regulamentações de privacidade, como a LGPD.\n" } Requirement ControleDeAcessoAoSistemaNFR ( 5 ) { text = "Apenas pessoal autorizado deve ter acesso aos controles manuais do sistema e aos dados administrativos.\n" } Requirement IntegracaoDeTecnologiasDePagamentoNFR ( 6 ) { text = "O sistema deve ser integrado com gateways de pagamento para realizar transações com cartões de crédito, débito, PIX e aplicativos móveis.\n" } Requirement MinimizacaoDeFilasNFR ( 7 ) { text = "O sistema deve ser otimizado para garantir que o tempo de espera na entrada e saída de veículos não ultrapasse 10 segundos por veículo, especialmente em períodos de alta demanda" } Requirement ConfiguracaoDeDiferentesCapacidadesNFR ( 8 ) { text = "O sistema deve ser configurável para operar em estacionamentos de diferentes tamanhos, desde pequenos prédios até grandes arenas esportivas.\nA arquitetura deve permitir adição ou remoção de sensores, câmeras e cancelas, sem impacto significativo na operação.\n" } Requirement DesempenhoEEscalabilidadeDeRedeNFR ( 9 ) { text = "O sistema deve suportar picos de acesso simultâneo em grandes eventos, escalando para acomodar a demanda sem perda de desempenho.\nDeve ser projetado para suportar centenas ou milhares de usuários simultâneos em grandes estacionamentos.\n" } Requirement UsabilidadeEAcessibilidadeNFR ( 10 ) { text = "A interface dos terminais e aplicativos deve ser intuitiva e acessível, com suporte para múltiplos idiomas e opções de acessibilidade para pessoas com deficiência.\nO sistema deve oferecer um modo de alto contraste, suporte a comandos de voz e integração com dispositivos de leitura de tela.\n" } Requirement TempoDeRespostaNFR ( 11 ) { text = "As operações de autenticação e autorização para entrada e saída devem ser concluídas em no máximo 3 segundos.\nO sistema de pagamento deve processar as transações em até 5 segundos para minimizar filas.\n" } Requirement ModuloDePrevisaoDeDemandaNFR ( 12 ) { text = "Utilizar análise de dados e machine learning para prever horários de alta demanda com base em histórico e tendências, sugerindo ajustes operacionais (ex.: reserva de vagas ou abertura de cancelas adicionais)." } Requirement AutonomiaOperacionalEmCasoDeFalhasNFR ( 13 ) { text = "Equipamentos críticos (cancelas, leitores de placas, terminais de pagamento) devem ser capazes de operar por um período mínimo de 24 horas sem conectividade total, utilizando backup de dados e bateria auxiliar.\n" }